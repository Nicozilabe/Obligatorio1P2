@using Entrega1.Clases.Publicacion;
@model List<Subasta>;
@if (Model.Count() > 0)
{


    <div class="container mt-1">
        <div class="row gap-3 row-cols-3 justify-content-center">
            @foreach (Subasta s in Model)
            {
                <div class="col-3 btn btn-primary">
                    <h2>Subasta @s.Nombre</h2>
                    <p>Articulos</p>
                    @foreach (var a in s.GetArticulos())
                    {
                        <p>@a.Nombre</p>
                    }
                    <p>@s.FechaPublicacion</p>
                    @if (s.Estado == TipoEstado.Abierta)
                    {
                        @Html.ActionLink("Ver", "CerrarSubasta", new { id = s.Id }, new { @class = "btn btn-secondary" })
                    }
                    else
                    {
                        @Html.ActionLink("Cerrada, Ver info.", "CerrarSubasta", new { id = s.Id }, new { @class = "btn btn-secondary" })
                    }
                </div>

            }
        </div>
    </div>
}
else
{
    <h1>No hay subastas disponibles por el momento</h1>
}